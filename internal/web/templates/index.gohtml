<html lang="en">
<head>
    <title>{{.Content.Title}}</title>
    <link rel="stylesheet" href="/static/web/dist/main.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body class="bg-gray-50">
{{template "header" .}}
<div class="container">
    <p>{{if eq .Topic nil}}Please select the type of issue you want to report:{{end}}</p>
        {{if ne .Topic nil}}
            {{template "form" (getByIndex .Content.Topics .Topic)}}
        {{else}}
            {{range $id, $c := .Content.Topics }}
                <div class="my-2">
                    <a style="margin: 0; font-weight: bold" href="/form/{{$id}}">{{$c.Name}}</a><br>
                    <p style="margin-top: 0">{{$c.Summary}}</p>
                </div>
            {{end}}
        {{end}}
</div>
{{template "footer" .}}
</body>
</html>
